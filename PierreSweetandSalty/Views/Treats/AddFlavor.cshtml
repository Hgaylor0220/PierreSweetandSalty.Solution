@model PierreSweetandSalty.Models.Treat
<div class ="jumbotron">
<h2>Add a flavor</h2>
</div>
<h4>Add a flavor to this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" class ="btn default" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>